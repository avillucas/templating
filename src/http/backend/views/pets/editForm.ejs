<%- contentFor('body') %>
<div class="row">
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Editar a la mascota <%= pet.name %></h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/pets" type="button" class="btn btn-sm btn-outline-secondary">
          Volver al listado
        </a>
      </div>
    </div>
    <form>
      <input type="hidden" name="id" value="<%= pet.id %>" />
      <div class="mb-3">
        <label for="petName" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="petName" aria-describedby="petNameValue" value="<%= pet.name %>" >
        <div id="petNameValue" class="form-text">Definir el nombre de la mascota</div>
      </div>
      <div class="mb-3">
        <label for="petAge" class="form-label">Edad</label>
        <input type="number" min="1" max="150" class="form-control" id="petAge" aria-describedby="petAgeValue" value="<%= pet.age %>"  >
        <div id="petAgeValue" class="form-text">Definir la edad en meses</div>
      </div>
      <div class="mb-3">
        <select class="form-select" aria-label="mediano">
          <option selected>Seleccione el tama√±o</option>
          <option value="small"    <% if (pet.size == 'small') {%> selected="selected"<%}%> >Chico ( 1 a 5kg )</option>
          <option value="medium"  <%  if (pet.size == 'medium') {%> selected="selected"<%}%>  >Mediano ( 6 a 15kg )</option>
          <option value="large"  <% if (pet.size == 'large') {%> selected="selected"<%}%>  >Grande ( 16 a 50kg )</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="petRaza" class="form-label">Raza</label>
        <input type="text" class="form-control" id="petRaza" aria-describedby="petRazaValue" value="<%= pet.breed %>">
        <div id="petRazaValue" class="form-text">Definir el nombre de la mascota</div>
      </div>

      <div class="mb-3">
        <select class="form-select" aria-label="Perro">
          <option selected>Tipo</option>
          <option value="cat" <% if (pet.type == 'cat') {%> selected="selected"<%}%> >Gato</option>
          <option value="dog" <% if (pet.type =='dog') {%> selected="selected"<%}%> >Perro</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Editar</button>
    </form>
  </main>
</div>