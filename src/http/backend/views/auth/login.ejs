<%- contentFor('css') %>
    <link href="/css/login.css" rel="stylesheet">
    <%- contentFor('body') %>
    <form class="form-signin" action="/login" method="POST">
        <% if(locals.message) {%>
            <div class="alert alert-primary" role="alert">
                <%= locals.message %>
            </div>
            <% } %>
        <img class="mb-4" src="/img/logo-guardianes.png" alt="" width="129" height="41" />
        <h1 class="h3 mb-3 font-weight-normal">Por favor ingrese sus datos</h1>
        <label for="inputEmail" class="sr-only">Correo eléctronico</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Correo eléctronico" required
            autofocus>
        <label for="inputPassword" class="sr-only">Contraseña</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Acceder</button>
    </form>